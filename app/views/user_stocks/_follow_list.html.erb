<% if !@followed_stocks.blank? %>
<div class="row">
    <div class="col-10">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Ticker</th>
                        <th scope="col">Last price</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% @followed_stocks.each do |stock| %>
                    <tr>
                        <th scope="row">
                            <%= stock.name %>
                        </th>
                        <td> <%= stock.ticker %>
                        </td>
                        <td> <%= stock.last_price %>
                        </td>
                        <td>placeholder</td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%end %>