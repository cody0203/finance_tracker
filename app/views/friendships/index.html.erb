<h1>My Friends</h1>

<div class="mt-5">

    <h3>Search friends</h3>
    <div class="row">
        <div class="col-10">
            <%= form_tag search_friend_path, remote: true, method: :get  do %>
            <div class="input-group mb-3">
                <%= text_field_tag :friend, params[:friend], class: "form-control", placeholder: "Email or name", 'aria-label': "Email or name", 'aria-describedby': "button-addon2" %>
                <button class="btn btn-success" type="submit" id="button-addon2">Search</button>
            </div>
            <% end %>
        </div>
    </div>
</div>

<div id="results"></div>
<%= render "friendships/friend_list" %>